
@import "project-variables"
@import "bootstrap-variables"

.wrapper
    position: fixed
    top: 0
    left: 0
    right: 0
    background: $theme
    color: $contrast

.inner
    display: block
    height: 60px
    overflow: hidden
    display: flex
    justify-content: flex-start
    align-items: center

.title
    font-size: $font-size-large * 1.2
    margin-right: $padding-base-horizontal * 3

.projects
    margin-right: $padding-base-horizontal * 3
